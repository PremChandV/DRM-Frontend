/* Logout Button Styles */
.logout-btn {
  float: right;
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: black;
  background-color: bisque;
  text-align: center;
  text-decoration: none;
  padding: 12px 25px;
  margin-right: 34px;
  cursor: pointer;
  border-radius: 5px;
}

/* Logout Button background on mouse-over */
.navbar button:hover {
  background: #ddd;
  color: black;
}

/* Main Section Styles */
.main .section {
  width: calc(100% - 225px);
  margin-left: 225px;
  transition: all 0.5s ease;
}

/* Main Body Container Styles */
.main .section .main-body-container {
  margin: 165px 30px 30px 30px;
  background: #fff;
  padding: 50px;
  line-height: 28px;
}

body.active .main .section {
  margin-left: 0;
  width: 100%;
}

body.active .main .sidebar {
  left: -225px;
}

/* Sidebar Styles */
.main .sidebar {
  background: rgb(5, 68, 104);
  position: fixed;
  top: 0;
  left: 0;
  width: 225px;
  height: 100%;
  padding: 20px 0;
  transition: all 0.5s ease;
}

.main .sidebar .profile {
  margin-bottom: 30px;
  text-align: center;
}

.main .sidebar .profile img {
  display: block;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin: 0 auto;
}

.main .sidebar .profile h3 {
  font-weight: medium;
  color: #ffffff;
  margin: 10px 0 5px;
}

.main .sidebar .profile p {
  color: rgb(206, 240, 253);
  font-size: 14px;
}

.main .sidebar ul li a {
  display: block;
  padding: 13px 30px;
  border-bottom: 1px solid #10558d;
  color: rgb(241, 237, 237);
  font-size: 16px;
  position: relative;
}

.main .sidebar ul li a .icon {
  color: #dee4ec;
  width: 30px;
  display: inline-block;
}

.main .sidebar ul li a:hover,
.main .sidebar ul li a.active {
  color: #0c7db1;

  background: white;
  border-right: 2px solid rgb(5, 68, 104);
}

.main .sidebar ul li a:hover .icon,
.main .sidebar ul li a.active .icon {
  color: #0c7db1;
}

.main .sidebar ul li a:hover:before,
.main .sidebar ul li a.active:before {
  display: block;
}
