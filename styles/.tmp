/* @import url('https://fonts.googleapis.com/css2?family=Open+Sans&display=swap'); */

* {
  list-style: none;
  text-decoration: none;
  /* margin: 0; */
  padding: 0;
  box-sizing: border-box;
  font-family: 'Open Sans', sans-serif;
}

body {
  margin: 0;
  background: #f5f6fa;
}

/* The Navigation Bar Styles*/
.navbar {
  display: inline-block;
  grid-template-columns: auto auto;
  overflow: hidden;
  background-color: #333;
  position: fixed;
  top: 0;
  width: 100%;
  height: 15%;
}

/* Navigation Bar Left Part Styles*/
.navbar-left {
  margin-left: 20px;
  margin-top: 45px;
}

/* Navbar Hamburger Icon Styles */
.navbar .hamburger /* a */ /* i */ {
  float: left;
  display: flex;
  font-size: 28px;
  color: white;
  align-items: center;
  margin: 38px 15px 50px 35px;
}

/* Navbar Hamburger Icon Hover Styles */
.navbar .hamburger /* a */ i:hover {
    color: #a2ecff;
  }
  
  .navbar .hamburger h1 {
    display: inline;
  }  

/* Navbar Heading Styles */
.navbar h1 {
  color: white;
  margin-top: 0px;
  margin: 35px 15px 50px 35px;
}

